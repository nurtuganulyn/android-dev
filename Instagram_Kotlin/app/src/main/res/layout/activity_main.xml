<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:contentInsetStart="1dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_photo">

            </ImageView>

            <ImageView
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:foregroundGravity="center"
                android:src="@drawable/ic_logo" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:foregroundGravity="center"
                android:src="@drawable/ic_direct" />
        </LinearLayout>
    </Toolbar>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle_image_1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/img1"
        app:civ_border_color="#FF1414"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toStartOf="@id/circle_image_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <TextView
        android:id="@+id/tv_stories_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="slamkul"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@id/circle_image_1"
        app:layout_constraintStart_toStartOf="@id/circle_image_1"
        app:layout_constraintTop_toBottomOf="@id/circle_image_1" />

    <TextView
        android:id="@+id/tv_stories_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="d.slamyl"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@id/circle_image_4"
        app:layout_constraintStart_toStartOf="@id/circle_image_4"
        app:layout_constraintTop_toBottomOf="@id/circle_image_4" />

    <TextView
        android:id="@+id/tv_stories_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="d.slamkl"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@id/circle_image_3"
        app:layout_constraintStart_toStartOf="@id/circle_image_3"
        app:layout_constraintTop_toBottomOf="@id/circle_image_3" />

    <TextView
        android:id="@+id/tv_stories_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="doslamkul"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@id/circle_image_5"
        app:layout_constraintStart_toStartOf="@id/circle_image_5"
        app:layout_constraintTop_toBottomOf="@id/circle_image_5" />

    <TextView
        android:id="@+id/tv_stories_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="d.sl4kul"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@id/circle_image_2"
        app:layout_constraintStart_toStartOf="@id/circle_image_2"
        app:layout_constraintTop_toBottomOf="@id/circle_image_2" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle_image_2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/img1"
        app:civ_border_color="#FF1414"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toStartOf="@id/circle_image_3"
        app:layout_constraintStart_toEndOf="@id/circle_image_1"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle_image_3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/img1"
        app:civ_border_color="#FF1414"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toStartOf="@id/circle_image_4"
        app:layout_constraintStart_toEndOf="@id/circle_image_2"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle_image_4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/img1"
        app:civ_border_color="#FF1414"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toStartOf="@id/circle_image_5"
        app:layout_constraintStart_toEndOf="@id/circle_image_3"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle_image_5"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/img1"
        app:civ_border_color="#FF1414"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/circle_image_4"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_stories_1" />


</androidx.constraintlayout.widget.ConstraintLayout>